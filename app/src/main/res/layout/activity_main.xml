<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF727171"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tvEqu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="250dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="50sp"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:text="AC"
            android:layout_width="wrap_content"
            android:backgroundTint="#D3D3D3"
            android:textColor="@android:color/black"
            android:layout_marginBottom="2dip"
            android:layout_marginRight="2dip"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAC"
            android:onClick="btnACClick"/>
        <Button
            android:text="+/-"
            android:backgroundTint="#D3D3D3"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_marginBottom="2dip"
            android:layout_marginRight="2dip"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPN" />
        <Button
            android:text="%"
            android:layout_width="wrap_content"
            android:backgroundTint="#D3D3D3"
            android:textColor="@android:color/black"
            android:layout_marginBottom="2dip"
            android:layout_marginRight="2dip"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPer"
            android:onClick="btnPercent"/>
        <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:onClick="btnOnOpClick"
            android:backgroundTint="#FF8C00"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDiv"
            android:layout_marginBottom="2dip"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow
        android:id="@+id/row1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom">
        <Button
            android:id="@+id/button7"
            android:onClick="btnOnClick"
            android:text="7"
            android:backgroundTint="#D3D3D3"
            android:textColor="@android:color/black"
            android:layout_marginRight="2dip"/>
        <Button
            android:id="@+id/button8"
            android:onClick="btnOnClick"
            android:text="8"
            android:backgroundTint="#D3D3D3"
            android:textColor="@android:color/black"
            android:layout_marginRight="2dip"/>
        <Button
            android:id="@+id/button9"
            android:onClick="btnOnClick"
            android:text="9"
            android:backgroundTint="#D3D3D3"
            android:textColor="@android:color/black"
            android:layout_marginRight="2dip"/>
        <Button
            android:id="@+id/buttonTimes"
            android:onClick="btnOnOpClick"
            android:backgroundTint="#FF8C00"
            android:text="*"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow
        android:id="@+id/row2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:gravity="bottom">
        <Button
            android:id="@+id/button4"
            android:onClick="btnOnClick"
            android:text="4"
            android:backgroundTint="#D3D3D3"
            android:textColor="@android:color/black"
            android:layout_marginRight="2dip"/>
        <Button
            android:id="@+id/button5"
            android:onClick="btnOnClick"
            android:text="5"
            android:backgroundTint="#D3D3D3"
            android:textColor="@android:color/black"
            android:layout_marginRight="2dip"/>
        <Button
            android:id="@+id/button6"
            android:onClick="btnOnClick"
            android:text="6"
            android:backgroundTint="#D3D3D3"
            android:textColor="@android:color/black"
            android:layout_marginRight="2dip"/>
        <Button
            android:id="@+id/buttonSub"
            android:onClick="btnOnOpClick"
            android:backgroundTint="#FF8C00"
            android:text="-"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow
        android:id="@+id/row3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:gravity="bottom">
        <Button
            android:id="@+id/button1"
            android:onClick="btnOnClick"
            android:text="1"
            android:backgroundTint="#D3D3D3"
            android:textColor="@android:color/black"
            android:layout_marginRight="2dip"/>
        <Button
            android:id="@+id/button2"
            android:onClick="btnOnClick"
            android:text="2"
            android:backgroundTint="#D3D3D3"
            android:textColor="@android:color/black"
            android:layout_marginRight="2dip"/>
        <Button
            android:id="@+id/button3"
            android:onClick="btnOnClick"
            android:text="3"
            android:backgroundTint="#D3D3D3"
            android:textColor="@android:color/black"
            android:layout_marginRight="2dip"/>
        <Button
            android:id="@+id/buttonAdd"
            android:onClick="btnOnOpClick"
            android:backgroundTint="#FF8C00"
            android:text="+"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_marginTop="2dip"
        android:layout_height="match_parent"
        android:id="@+id/row4">
        <Button
            android:id="@+id/button0"
            android:onClick="btnOnClick"
            android:layout_span="2"
            android:text="0"
            android:backgroundTint="#D3D3D3"
            android:textColor="@android:color/black"
            android:layout_marginRight="2dip"/>
        <Button
            android:id="@+id/buttonDot"
            android:onClick="btnDotClick"
            android:text="."
            android:backgroundTint="#D3D3D3"
            android:textColor="@android:color/black"
            android:layout_marginRight="2dip"/>

        <Button
            android:id="@+id/buttonEquals"
            android:onClick="btnEqualsClick"
            android:backgroundTint="#FF8C00"
            android:text="="
            android:layout_weight="1"/>
    </TableRow>

</TableLayout>